<h1 align="center">Log in</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  <div class ='form-group'>
    <div class="col-form-label col-sm-8 col-sm-offset-2">
    <%= f.label :email %>
    </div>
    <div class="col-form-label col-sm-8 col-sm-offset-2">
    <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
    </div>
  </div>

  <div class ='form-group'>
    <div class="col-form-label col-sm-8 col-sm-offset-2">
    <%= f.label :password %>
    </div>
    <div class="col-form-label col-sm-8 col-sm-offset-2">
    <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "Password" %>
    </div>
  </div>

  <div class ='form-group'>
    <div class="col-sm-offset-2 col-sm-8">
    <%= f.submit("Log in", class: "btn btn-primary btn-lg") %>
    </div>
  </div>

<% end %>
